<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@drawable/ui_setting_top_bar_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:text="通话设置"
            android:textColor="#b6b6b6"
            android:textSize="30sp" />
    </RelativeLayout>
    
    <ScrollView         
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
        <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >
		    
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:text="联系人"
		        android:layout_marginLeft="20dip"
		        android:layout_marginTop="20dip"
		        android:layout_marginBottom="10dip"
		        android:textColor="#666666"
		        android:textSize="20sp" />
		    
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:background="#666666"
		        />
		    
		    <LinearLayout
		        android:id="@+id/clear_call_history"
		        android:layout_width="match_parent"
		        android:layout_height="80dp"
		        android:background="@drawable/settings_list_bg"
		        android:onClick="clearCallHistory"
		        android:clickable="true"
		        android:addStatesFromChildren="true"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical"
		            android:layout_marginLeft="40dip"
		            android:text="清空通话记录"
		            android:textColor="@color/settings_list_item"
		            android:textSize="25sp" />
		    </LinearLayout>
		    
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:background="#666666"
		        />
		    
		    <LinearLayout
		        android:id="@+id/clear_contact"
		        android:layout_width="match_parent"
		        android:layout_height="80dp"
		        android:background="@drawable/settings_list_bg"
		        android:onClick="clearContact"
		        android:clickable="true"
		        android:addStatesFromChildren="true"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical"
		            android:layout_marginLeft="40dip"
		            android:text="清空联系人"
		            android:textColor="@color/settings_list_item"
		            android:textSize="25sp" />
		    </LinearLayout>
		    
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:background="#666666"
		        />
		    
		    <LinearLayout
		        android:id="@+id/sync_contact"
		        android:layout_width="match_parent"
		        android:layout_height="80dp"
		        android:background="@drawable/settings_list_bg"
		        android:onClick="syncContact"
		        android:clickable="true"
		        android:addStatesFromChildren="true"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical"
		            android:layout_marginLeft="40dip"
		            android:text="同步联系人"
		            android:textColor="@color/settings_list_item"
		            android:textSize="25sp" />
		    </LinearLayout>
		    
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:background="#666666"
		        />
		
		    
		    
		    
		    
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:text="蓝牙"
		        android:layout_marginLeft="20dip"
		        android:layout_marginTop="20dip"
		        android:layout_marginBottom="10dip"
		        android:textColor="#666666"
		        android:textSize="20sp" />
		    
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:background="#666666"
		        />
		    
		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="80dp"
		        android:clickable="true"
		        android:addStatesFromChildren="true"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical"
		            android:layout_marginLeft="40dip"
		            android:text="蓝牙开关"
		            android:textColor="#000000"
		            android:textSize="25sp" />		        

		        <com.tchip.view.SwitchButton
		            android:id="@+id/switchBT"
		            style="@style/SwitchButtonStyle"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="40dip"
		            app:animationVelocity="8"
		            app:measureFactor="1.5"
		            app:offDrawable="@drawable/ios_off"
		            app:onColor="#43d95d"
		            app:thumbDrawable="@drawable/ios_thumb"
		            app:thumb_marginBottom="-8dp"
		            app:thumb_marginLeft="-5dp"
		            app:thumb_marginRight="-5dp"
		            app:thumb_marginTop="-2.5dp" />
		    </RelativeLayout>
		    
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:background="#666666"
		        />
		    
		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="80dp"
		        android:clickable="true"
		        android:addStatesFromChildren="true"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical"
		            android:layout_marginLeft="40dip"
		            android:text="设备名称"
		            android:textColor="#000000"
		            android:textSize="25sp" />
		        <TextView
		            android:id="@+id/pin_code_1"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical"
		            android:layout_marginLeft="180dip"
		            android:text="匹配密钥("
		            android:textColor="#666666"
		            android:textSize="20sp" />
		        <EditText
		            android:id="@+id/bt_pin_code"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical"
		            android:layout_toRightOf="@+id/pin_code_1"
		            android:text="0000"
		            android:background="#00000000"
		            android:textColor="#666666"
		            android:textSize="20sp" />
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical"
		            android:layout_toRightOf="@+id/bt_pin_code"
		            android:text=")"
		            android:textColor="#666666"
		            android:textSize="20sp" />
		        <EditText 
		            android:id="@+id/bt_name"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="40dip"
		            android:background="#00000000"
		            android:text="TianQi_BT"
		            android:textColor="#000000"
		            android:textSize="20sp" 
		            />
		    </RelativeLayout>
		    
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:background="#666666"
		        />
		    
		    <RelativeLayout
		        android:id="@+id/bt_pair"
		        android:layout_width="match_parent"
		        android:layout_height="80dp"
		        android:background="@drawable/settings_list_bg"
		        android:clickable="true"
		        android:onClick="btConnect"
		        android:addStatesFromChildren="true"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:id="@+id/bt_connect_operate"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical"
		            android:layout_marginLeft="40dip"
		            android:text="开始配对"
		            android:textColor="@color/settings_list_item"
		            android:textSize="25sp" />
		
		        <TextView
		            android:id="@+id/bt_connect_status"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="40dip"
		            android:text="未连接"
		            android:textColor="#666666"
		            android:textSize="20sp" />
		    </RelativeLayout>
		    
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:background="#666666"
		        />
        </LinearLayout>        
     </ScrollView>
</LinearLayout>
